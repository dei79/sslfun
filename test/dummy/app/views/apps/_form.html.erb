<%= simple_form_for(@app) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, :label => "Name: " %>
    </div>

    <div class="form-inputs">
      <%= f.association :app_cert, :label => "Certificate: ", :include_blank => "Will be generated later" %>
    </div>

    <div class="form-inputs">
      <%= f.association :app_key, :label => "Key Pair: ", :include_blank => "Generate a new key" %>
    </div>


    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>

